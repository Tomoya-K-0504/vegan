<header class="header">
  <nav class="navbar navbar-expand-lg navbar-light fixed-top">
    <%= image_tag 'logo_small.png', class: "navbar-brand logo-small" %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
      <ul class="navbar-nav">
<!--        ログイン時-->
        <% if logged_in? %>
          <li class="nav-item">
            <a class="nav-link" href="/member-home">ホーム<span class="sr-only"></span></a>
          </li>
          <li class="nav-item">
            <%= link_to "マイページ", user_path(current_user), class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "V-meet", users_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">ログアウト<span class="sr-only"></span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/service-content">事業内容<span class="sr-only"></span></a>
          </li>
          <li class="nav-item">
            <%= link_to "詳細設定", edit_user_path(current_user), class: "nav-link" %>
          </li>
        <% else %>
<!--          未ログイン時-->
          <li class="nav-item">
            <a class="nav-link" href="/become-member">メンバー登録<span class="sr-only"></span></a>
          </li>
          <li class="nav-item">
            <%= render 'sessions/login_popup' %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>

