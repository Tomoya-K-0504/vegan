    </div>
  </div>

  <div class="form-group row field">
    <%= form.label :contact %>
    <div class="col-sm-2">
      <%= form.text_field :contact, id: :user_contact, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row field">
    <%= form.label :career %>
    <div class="col-sm-4">
      <%= form.text_area :career, id: :user_career, class: 'form-control' %>
