<%= form_with(model: user, local: true, :html => {:class => 'member-info form-group'}) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row field">
    <%= form.label :first_name %>
    <div class="col-sm-1">
      <%= form.text_field :first_name, id: :user_first_name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row field">
    <%= form.label :last_name %>
    <div class="col-sm-1">
      <%= form.text_field :last_name, id: :user_last_name, class: 'form-control' %>
    </div>

  </div>

  <div class="form-group row field">
    <%= form.label :email %>
    <div class="col-sm-2">
      <%= form.text_field :email, id: :user_email, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row field">
    <%= form.label :password %>
    <div class="col-sm-2">
      <%= form.password_field :password, id: :user_password, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row field">
    <%= form.label :password_confirmation %>
    <div class="col-sm-2">
      <%= form.password_field :password_confirmation, class: 'form-control' %>
    </div>
  </div>

<!--  <div class="form-group row field">-->
    <%#= form.label :role %>
<!--    <div class="col-sm-10">-->
      <%#= form.text_field :role, id: :user_role, class: 'form-control' %>
<!--    </div>-->
<!--  </div>-->

  <div class="form-group row field">
    <%= form.label :sex %>
    <div class="col-sm-1">
      <%= form.text_field :sex, id: :user_sex, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row field">
    <%= form.label :age %>
    <div class="col-sm-1">
      <%= form.number_field :age, id: :user_age, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row field">
    <%= form.label :job %>
    <div class="col-sm-2">
      <%= form.text_field :job, id: :user_job, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row field">
    <%= form.label :born_in %>
    <div class="col-sm-2">
      <%= form.text_field :born_in, id: :user_born_in, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row field">
    <%= form.label :living_address %>
    <div class="col-sm-4">
      <%= form.text_field :living_address, id: :user_living_address, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row field">
    <%= form.label :principle %>
    <div class="col-sm-3">
      <%= form.text_field :principle, id: :user_principle, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row field">
    <%= form.label :trigger %>
    <div class="col-sm-4">
      <%= form.text_field :trigger, id: :user_trigger, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row field">
